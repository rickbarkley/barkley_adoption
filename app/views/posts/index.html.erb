

<% @posts.each do |post| %>

<h3><%= post.title %></h3>
<br />
<%=h post.body.html_safe %>
<br />
<p><em><%= post.author %></em></p>



<% if user_signed_in? %>
  <% if current_user.has_role? :admin %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<% end %>
<% end %>


<br />
<% if user_signed_in? %>
  <% if current_user.has_role? :admin %>
<p><%= link_to 'New Post', new_post_path %></p>
<% end %>
<% end %>
